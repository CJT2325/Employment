<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cjt.employment.ui.fragment.CompanyInfoFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/item_selector"
                android:clickable="true"
                android:padding="18dp">

                <ImageView
                    android:id="@+id/iv_cover"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginRight="18dp" />

                <TextView
                    android:id="@+id/tv_company"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/iv_cover"
                    android:text="CompanyName" />

                <TextView
                    android:id="@+id/tv_companyinfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_company"
                    android:layout_toRightOf="@id/iv_cover"
                    android:text="未融资 | 15-50人 | O2O" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_companyinfo"
                    android:layout_toRightOf="@id/iv_cover"
                    android:text="面试评价" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="#DDDDDD" />

            <RelativeLayout
                android:id="@+id/layout_evaluate"
                android:background="@drawable/item_selector"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="18dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="面试评价" />
            </RelativeLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:background="#DDDDDD" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="18dp"
                android:text="产品介绍" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="#DDDDDD" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150dp">

                <com.youth.banner.Banner
                    android:id="@+id/banner"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:background="#DDDDDD" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="18dp"
                android:text="公司介绍" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="#DDDDDD" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="18dp"
                android:text="公司介绍公司介绍公司介绍公司介绍公司介绍公司介绍公司介绍公司介绍公司介绍公司介绍" />

            <View
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:background="#DDDDDD" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="18dp"
                android:text="管理团队" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="#DDDDDD" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="18dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/iv_usercover"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginRight="18dp"
                    android:src="@drawable/tencentlogo" />

                <TextView
                    android:id="@+id/tv_founder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_toRightOf="@id/iv_usercover"
                    android:text="张小龙"
                    android:textColor="#000"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tv_userposition"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_founder"
                    android:layout_toRightOf="@id/iv_usercover"
                    android:text="人物介绍" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>

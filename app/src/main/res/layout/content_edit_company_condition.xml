<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.cjt.employment.ui.activity.EditCompanyConditionActivity"
    tools:showIn="@layout/activity_edit_company_condition">

    <EditText
        android:id="@+id/et_financting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="融资情况"
        android:maxLength="20" />

    <EditText
        android:id="@+id/et_pattern"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="商业模式"
        android:maxLength="20" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/tv_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="企业人数" />

        <EditText
            android:id="@+id/et_startnumber"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_number"
            android:gravity="center_horizontal"
            android:inputType="number"
            android:maxLength="5" />

        <TextView
            android:id="@+id/tv_about"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/et_startnumber"
            android:text="至" />

        <EditText
            android:id="@+id/et_endnumber"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_about"
            android:gravity="center_horizontal"
            android:inputType="number"
            android:maxLength="5" />
    </RelativeLayout>
</LinearLayout>

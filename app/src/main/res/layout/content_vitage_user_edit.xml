<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.cjt.employment.ui.activity.VitageUserEditActivity"
    tools:showIn="@layout/activity_vitage_user_edit">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_mode_edit_red_24dp"
                android:hint="姓名"
                android:textColor="@color/colorAccent" />

            <EditText
                android:id="@+id/et_sex"
                android:editable="false"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_mode_edit_red_24dp"
                android:hint="性别"
                android:textColor="@color/colorAccent" />

            <EditText
                android:id="@+id/et_brithday"
                android:clickable="true"
                android:editable="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_mode_edit_red_24dp"
                android:hint="出生年月"
                android:textColor="@color/colorAccent" />

            <EditText
                android:id="@+id/et_education"
                android:editable="false"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:drawableLeft="@drawable/ic_mode_edit_red_24dp"
                android:hint="最高学历"
                android:textColor="@color/colorAccent" />

            <EditText
                android:id="@+id/et_worktime"
                android:editable="false"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_mode_edit_red_24dp"
                android:hint="工作年限"
                android:textColor="@color/colorAccent" />

            <EditText
                android:id="@+id/et_phone"
                android:inputType="number"
                android:maxLength="11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:drawableLeft="@drawable/ic_mode_edit_red_24dp"
                android:hint="手机号码"
                android:textColor="@color/colorAccent" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_mode_edit_red_24dp"
                android:hint="邮箱"
                android:textColor="@color/colorAccent" />

            <EditText
                android:id="@+id/et_city"
                android:clickable="true"
                android:editable="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:drawableRight="@drawable/ic_keyboard_arrow_right_black_24dp"
                android:hint="所在城市"
                android:textColor="@color/colorAccent" />
        </LinearLayout>

    </ScrollView>

</RelativeLayout>
